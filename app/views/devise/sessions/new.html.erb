<div class="section">
  <div class="container">
    <div class="columns is-centered is-4">
      <div class="column is-4">
        <h2 class="title">Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="field">
              <div class="control">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'}  %>
              </div>
            </div>
            <div class="field">
              <div class="control">
              <%= f.input :password,
                          required: false,
                          input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
              </div>
            </div>
            <div class="field">
              <div class="control">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="control">
            <%= f.button :submit,  "Login", class: "button  is-info is-medium px-6 py-1 my-2 has-text-weight-semibold	"  %>
            </div>
          </div>

        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>