<div class="section">
  <div class="columns is-centered is-4">
    <div class="column is-4">
      <h2 class="title">Forgot your password?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="field">
          <div class="control">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { class: "input" },
                      wrapper: false,
                      label_html: { class: "label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
          <%= f.button :submit, "Send me reset password instructions", class: "button  is-info is-medium px-6 py-1 my-2 has-text-weight-semibold	" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>