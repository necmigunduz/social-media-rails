<div class="column is-half">
    <article class="media box">
        <figure class="media-left">
            <p class="image is-64">
                <img src="https://bulma.io/images/placeholders/64x64.png">
            </p>
        </figure>
        <div class="media-content">
            <%= render 'twits/form' %>
        </div>
    </article>


<% @twits.each do |twit| %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/64x64.png">
                </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <strong>Necmi Gunduz</strong><br>
                    <small>@necm_gun</small><br>
                    <p><%= twit.twit %></p>
                </div>
                <div class="level">
                    <div class="level-left is-mobile">
                    <%= link_to twit, class:"level-item" do %>
                        <span class="icon"><i class="fa fa-link"></i></span>
                    <% end %>
                    <%= link_to edit_twit_path(twit), class: "level-item" do %>
                        <span class="icon"><i class="fa fa-pencil"></i></span>
                    <% end %>
                    <%= link_to twit, method: :delete, data: {confirm: "Are you sure you want to delete this twit?"} do %>
                        <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                    <% end %>
                    </div>
                
                </div>
            </div>
        </article>
    </div>
<% end %>

</div>