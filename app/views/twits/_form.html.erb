<%= simple_form_for(@twit) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :twit, label: 'Twit it!', input_html: {class: "textarea"}, wrapper: false, 
    label_html: {class: "label"}, placeholder: 'Compose a new twit...'%>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
